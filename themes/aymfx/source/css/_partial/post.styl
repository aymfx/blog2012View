.post
  width: 800px;
  margin: 1em auto;
  padding: 10px 20px;
  background: #fcfcfc;
  border: 1px solid #ddd;
  box-shadow: 0 0 2px #ddd;
  .post-title
    width: 100%; 
    text-align: center;
    margin-bottom: 10px;
    a.post-title-link
      color: #0097a7;
      text-decoration: none;
      font-size: 30px;
      &:hover{
        border-bottom: 1px solid #aaa;
        transition: all 0.1s ease ;
        color: red;
        }
    .post-sub
      display: flex;
      justify-content: center;
      align-items: center;
      span
        padding: 0 10px 0 3px;
    .post-content
      font-size: 14px;
      line-height: 28px;
      padding: 10px 0;
      img{
        width: 100%;
      }
      blockquote
        position: static;
        font-family: Georgia,"Times New Roman","Microsoft Yahei",serif;
        font-size: 1.1em;
        margin: 20px 0px 0;
        padding: 10px;
        color: #999;
        background: transparent;
        border-left: 4px solid #8eb9f5;
        p 
          text-indent: 2em;
    .more
      text-align: center;
      margin: 15px 0;
      a
        background: #4996C7;
        padding: 5px 10px;
        border-radius: 2px;
        font-size: 12px;
        text-align: center;
        text-decoration: none;
        color: #fff;

        
.post-detail
  width:1200px;
  box-sizing: border-box;
  margin: 0 auto;
  padding: 20px;
  display: flex;
  .left
    flex:2;
    width: 200px;
    background: #fcfcfc;
    margin-right: 20px;
    box-sizing: border-box;
    padding: 20px;
    h4
      color: #0e83cd;
      padding: 10px 0;
      font-family: Lato,"Helvetica Neue",Helvetica,Arial,sans-serif;
    ol
      list-style : none;
      li
        overflow: hidden;
        text-overflow:ellipsis;
        white-space: nowrap;
      a
        color: #444;
        line-height: 28px;
        font-size: 14px;
        padding: 7px 0;
        text-decoration: none;
        cursor: pointer       
        &:hover
          color: #3eaf7c;
  .right
    display: block;
    overflow-y: scroll;
    height: 90vh;
    flex:8;
    padding: 20px 20px;
    background: #fcfcfc;
    .title
      color: #3eaf7c;
      font-size: 28px;
      margin: 20px auto;
      text-align: center;
    .post-meta
      display:flex;
      justify-content: center;
      align-items: center;
      i
        padding-right: 3px; 
           
    img
      width: 100%;
    .article-container
      blockquote
        background-color: rgba(255,229,100,.3);
        border-color: #e7c000;
        color: #6b5900;
        padding: .2rem 1.5rem;
        border-left-width: .5rem;
        border-left-style: solid;
        margin: 1rem 0;
      p
        display: block;
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        font-size: 16px;
        color: #2c3e50;
      h1,h2,h3,h4,h5,h6
        font-size: 1.65rem;
        padding-bottom: .3rem;
        border-bottom: 1px solid #eaecef;  



      
      
      
    
